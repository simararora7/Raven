<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:maxLines="2"
        android:lines="2"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/tv_influencer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="12dp"
        android:text="Real Influencer"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_weight="1"
        android:maxLines="2"
        android:lines="2"
        android:gravity="center"
        android:id="@+id/tv_popular_platform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="12dp"
        android:text="Popular Platform"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:maxLines="2"
            android:lines="2"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_connections_directed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="12dp"
            android:text="Connections (Directed)"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:maxLines="2"
            android:lines="2"
            android:gravity="center"
            android:id="@+id/tv_connections_undirected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="12dp"
            android:text="Connectiions (Undirected)"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>